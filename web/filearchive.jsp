  response.setHeader("Content-Disposition",
                   "filename=\""+shortname+"\"");
  try
  {
   BufferedInputStream in=new 
         BufferedInputStream (new FileInputStream (filename));
   BufferedOutputStream binout=new 
         BufferedOutputStream(response.getOutputStream());
   int ch=in.read();
   while(ch!=-1)
   {
    binout.write(ch);
    ch=in.read();
   }
   binout.close();
   in.close();
  }
